datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  createdAt   DateTime  @default(now())
  date        DateTime?
  description String?
  id          String    @id @default(cuid())
  name        String?
  tickets     Ticket[]
  updatedAt   DateTime  @updatedAt
  venue       String?
}

model Ticket {
  createdAt    DateTime @default(now())
  event        Event?   @relation(fields: [eventId], references: [id])
  eventId      String?
  id           String   @id @default(cuid())
  ticketNumber String?
  updatedAt    DateTime @updatedAt
  user         User?    @relation(fields: [userId], references: [id])
  userId       String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  tickets   Ticket[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}
